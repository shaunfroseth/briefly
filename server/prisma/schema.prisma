generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Recipe {
  id          Int      @id @default(autoincrement())
  url         String
  title       String
  servings    String?   // e.g. "Serves 4", optional
  totalTime   String?   // e.g. "45 minutes", optional
  ingredients Json      // stores an array of Ingredient objects
  steps       Json      // stores an array of step strings
  createdAt   DateTime @default(now())
}